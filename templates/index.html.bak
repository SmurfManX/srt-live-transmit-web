<!DOCTYPE html>
<html>
<head>
    <title>SRT Channels</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-wrapper container">
                <a href="#" data-target="mobile-menu" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul id="nav-desktop" class="right hide-on-med-and-down">
                    <li>
                        <div class="search-container">
                            <div class="search-box">
                                <input type="text" class="search-input" placeholder="Search channels..." id="search-input">
                                <button class="search-btn"><i class="material-icons">search</i></button>
                            </div>
                        </div>
                    </li>
                    <li>
                        <a href="#" id="dark-mode-toggle">
                            <i class="material-icons">brightness_4</i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <ul class="sidenav" id="mobile-menu">
            <li>
                <div class="search-container">
                    <div class="search-box">
                        <input type="text" class="search-input" placeholder="Search channels..." id="search-input-mobile">
                        <button class="search-btn"><i class="material-icons">search</i></button>
                    </div>
                </div>
            </li>
            <li>
                <a href="#" id="dark-mode-toggle-mobile">
                    <i class="material-icons">brightness_4</i>
                </a>
            </li>
        </ul>
    </header>

    <main>
        <div class="container">
            <div class="channel-table-container">
                <div class="channel-table-header">
                    <h5>Channel List</h5>
                    <a href="{{ url_for('new_channel') }}" class="btn-floating btn-large waves-effect waves-light red new-channel-btn"><i class="material-icons">add</i></a>
                </div>
                <table class="channel-table highlight responsive-table">
                    <thead>
                        <tr>
                            <th>Channel Name</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="channel-table-body">
                        {% for channel in channels %}
                        <tr>
                            <td>{{ channel['channel_name'] }}</td>
                            <td>
                                {% if channel['status'] == 'stopped' %}
                                    <span class="status status-stopped">Stopped</span>
                                {% elif channel['status'] == 'running' %}
                                    <span class="status status-running">Running</span>
                                {% endif %}
                            </td>
                            <td class="actions">
                                <a class="btn-floating btn-small waves-effect waves-light dropdown-trigger" href="#" data-target="dropdown-{{ loop.index }}"><i class="material-icons">more_vert</i></a>
                                <a href="#details-modal-{{ loop.index }}" class="btn-flat waves-effect modal-trigger" data-target="details-modal-{{ loop.index }}">Show Details</a>
                                <ul id="dropdown-{{ loop.index }}" class="dropdown-content">
                                    <li>
                                        <form action="{{ url_for('start_channel', channel_name=channel['channel_name']) }}" method="post" style="display:inline;">
                                            <button class="dropdown-btn" title="Start"><i class="material-icons">play_arrow</i> Start</button>
                                        </form>
                                    </li>
                                    <li>
                                        <form action="{{ url_for('stop_channel', channel_name=channel['channel_name']) }}" method="post" style="display:inline;">
                                            <button class="dropdown-btn" title="Stop"><i class="material-icons">stop</i> Stop</button>
                                        </form>
                                    </li>
                                    <li>
                                        <a href="{{ url_for('edit_channel', channel_name=channel['channel_name']) }}" class="dropdown-btn" title="Edit"><i class="material-icons">edit</i> Edit</a>
                                    </li>
                                    <li>
                                        <form action="{{ url_for('delete_channel', channel_name=channel['channel_name']) }}" method="post" style="display:inline;">
                                            <button class="dropdown-btn" title="Delete"><i class="material-icons">delete</i> Delete</button>
                                        </form>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                        <div id="details-modal-{{ loop.index }}" class="modal">
                            <div class="modal-content">
                                <h5>{{ channel['channel_name'] }} Details</h5>
                                <div class="input-details">
                                    <p><strong>Protocol:</strong> {{ channel['input_protocol'] }}</p>
                                    <p><strong>IP:</strong> {{ channel['input_ip'] }}</p>
                                    <p><strong>Port:</strong> {{ channel['input_port'] }}</p>
                                    <p><strong>rcvbuf:</strong> {{ channel['input_rcvbuf'] }}</p>
                                    <p><strong>sndbuf:</strong> {{ channel['input_sndbuf'] }}</p>
                                    <p><strong>Latency:</strong> {{ channel['input_latency'] }}</p>
                                    <p><strong>Bitrate:</strong> {{ channel['input_bitrate'] }}</p>
                                </div>
                                <div class="output-details">
                                    <p><strong>Protocol:</strong> {{ channel['output_protocol'] }}</p>
                                    <p><strong>IP:</strong> {{ channel['output_ip'] }}</p>
                                    <p><strong>Port:</strong> {{ channel['output_port'] }}</p>
                                    <p><strong>rcvbuf:</strong> {{ channel['output_rcvbuf'] }}</p>
                                    <p><strong>sndbuf:</strong> {{ channel['output_sndbuf'] }}</p>
                                    <p><strong>Latency:</strong> {{ channel['output_latency'] }}</p>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
                            </div>
                        </div>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <a href="#" class="scroll-to-top" id="scroll-to-top"><i class="material-icons">arrow_upward</i></a>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        const darkModeToggle = document.getElementById('dark-mode-toggle');
        const darkModeToggleMobile = document.getElementById('dark-mode-toggle-mobile');
        const body = document.body;
        const nav = document.querySelector('nav');
        const channelTable = document.querySelector('.channel-table');
        const scrollToTop = document.getElementById('scroll-to-top');
        const modals = document.querySelectorAll('.modal');

        darkModeToggle.addEventListener('click', toggleDarkMode);
        darkModeToggleMobile.addEventListener('click', toggleDarkMode);

        function toggleDarkMode() {
            body.classList.toggle('dark-mode');
            nav.classList.toggle('dark-mode');
            channelTable.classList.toggle('dark-mode');
            modals.forEach(modal => {
                modal.classList.toggle('dark-mode');
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            const dropdowns = document.querySelectorAll('.dropdown-trigger');
            M.Dropdown.init(dropdowns, {
                constrainWidth: false,
                coverTrigger: false,
                closeOnClick: true
            });

            const elems = document.querySelectorAll('select');
            M.FormSelect.init(elems);

            const sideNav = document.querySelectorAll('.sidenav');
            M.Sidenav.init(sideNav);

            const modalsInstance = M.Modal.init(modals);
        });

        document.getElementById('search-input').addEventListener('input', searchChannels);
        document.getElementById('search-input-mobile').addEventListener('input', searchChannels);

        function searchChannels() {
            const searchValue = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#channel-table-body tr:not(.modal)');

            tableRows.forEach(row => {
                const channelName = row.cells[0].innerText.toLowerCase();
                if (channelName.includes(searchValue)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        window.onscroll = function() {
            const scrollTop = document.documentElement.scrollTop || document.body.scrollTop;
            if (scrollTop > 500) {
                scrollToTop.classList.add('show');
            } else {
                scrollToTop.classList.remove('show');
            }
        };

        scrollToTop.addEventListener('click', function(e) {
            e.preventDefault();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>
</body>
</html>